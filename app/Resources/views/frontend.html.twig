{% extends '::base.html.twig' %}

{% set ciudadSeleccionada = app.request.attributes.has('ciudad')
    ? app.request.attributes.get('ciudad')
    : ciudad_por_defecto
%}

{% block javascripts %}{% endblock %}
{% block stylesheets %}
    <link href="{{ asset ('bundles/oferta/css/normalizar.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/oferta/css/comun.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/oferta/css/frontend.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    <header>
        <h1><a href="{{ path('portada', {'ciudad': ciudadSeleccionada}) }}">##CUPON##</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('portada', {'ciudad': ciudadSeleccionada}) }}">Oferta del d√≠a</a></li>
                <li><a href="#">Ofertas recientes</a></li>
                <li><a href="#">Mis ofertas</a></li>   
            </ul>
            {% render "CiudadBundle:Default:listaCiudades" with { 'ciudad':ciudadSeleccionada } %}
        </nav>
    </header>

    <article>
        {% block article %}{% endblock %}
    </article>

    <aside>
        {% block aside %}
            <section id="login">
            {% render "UsuarioBundle:Default:cajaLogin" %}
            </section>   
            <section id="nosotros">
                <h2>Sobre nosotros</h2>
                <p>Lorem ipsum dolor sit amet...</p>
            </section>
        {% endblock %}
    </aside>
{% endblock %}